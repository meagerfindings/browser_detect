<h1>Add New Issue for <%= @portal.name.strip %></h1>
<%= form_with(model: @portal_issue, url: portal_portal_issues_path) do |f| %>
  <% if @portal_issue.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@portal_issue.errors.count, "error") %> prohibited
        the issue from being saved:
      </h2>
      <ul>
        <%= @portal_issue.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= f.label :name, "Issue Name" %>
    <%= f.text_field :name, required: true %><br>

    <%= f.label :description %>
    <%= f.text_area :description, required: true, minlength: 5 %><br>
  </p>

  <%= f.submit "Create Browser Issue" %>
<% end %>

<%= link_to 'Back to Browser Issues', portal_portal_issues_path(@portal) %>
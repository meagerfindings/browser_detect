<h1><% @portal.name %> Issues</h1>

<table>
  <tr>
    <td>Name</td>
    <td>Description</td>
  </tr>

  <% @portal.portal_issues.each do |issue| %>
    <tr>
      <td><%= issue.name %></td>
      <td><%= issue.description %></td>
      <td><%= link_to 'Show', portal_issue_path(issue) %></td>
      <td><%= link_to 'Edit', edit_portal_issue_path(issue) %></td>
      <td><%= link_to 'Delete', portal_issue_path(issue),
                      method: :delete,
                      data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>

</table>
<%= link_to 'Add New Browser Issue', new_portal_portal_issue_path(@portal) %> |
<%= link_to 'Back to Browser Page', portals_path(@portal) %>
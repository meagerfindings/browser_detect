<!DOCTYPE html>
<html>
  <head>
    <title>Browser Detect<%= ": #{@page_title}" unless @page_title.nil? %></title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <nav class="navbar">
      <div class="row">
          <% if employee_user %>
            <%= link_to 'Browsers', portals_path %> |
            <%= link_to 'Registered Users', users_path %> |
            <%= link_to 'Visitors', visitors_path %>
          <% end %>
      <% if current_user %>
        <div class="u-pull-right">
          <%= link_to "#{current_user.email}", user_url(current_user) %> |
          <%= link_to 'Log out', logout_path, method: 'delete' %>
        </div>
      <% else %>
          <%= link_to 'Login', login_path %> |
          <%= link_to 'Create an Account', signup_path %>
      <% end %>
      </div>
    </nav>
    <br>

    <%= render 'shared/flash_messages' unless flash.empty? %>


    <!-- Before Yield -->
      <%= yield %>
    <!-- After Yield -->
  </body>
  <footer>
    <div class="u-pull-right">
      <%= link_to 'View Source on GitHub', 'https://github.com/meagerfindings/browser_detect' %>
      <%= link_to image_tag('GitHub-Mark-120px-plus.png',
                            size: '15',
                            alt: 'View source on GitHub.'),
                  'https://github.com/meagerfindings/browser_detect' %>
    </div>
  </footer>
</html>

<h1><%= @portal.name %></h1>

<strong>Current Version:</strong><%= @portal.current %><br>
<%= link_to "Edit #{@portal.name}", edit_portal_path(@portal.id) %>

<h2>Browser Wide Issues:</h2>
  <table>
    <tr>
      <th>Name</th>
      <th>Issue</th>
    </tr>

    <% @portal.portal_issues.each do |issue| %>
      <tr>
        <td><%= issue.name %></td>
        <td><%= issue.description %></td>
        <td><%= link_to 'Show', portal_portal_issues_path(issue) %></td>
        <td><%= link_to 'Edit', edit_portal_issue_path(issue) %></td>
        <td><%= link_to 'Delete', portal_portal_issues_path(issue),
                        method: :delete,
                        data:   { confirm: 'Are you certain?' } %></td>
      </tr>
    <% end %>
  </table>

<h2>Versions Specific Issues:</h2>
<%= render 'versions/index'%><br>
<%= link_to 'New Version', new_portal_version_path(@portal)  %> |
<%= link_to 'Version Management Page', portal_versions_path(@portal)  %> |
<%= link_to 'Browser Management Page', portals_path %>